{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    "declarationDir": "types",
    "emitDeclarationOnly": false,
    "outDir": "lib",
    "maxNodeModuleJsDepth": 0,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "test/**/fixtures/**/*"]
}
