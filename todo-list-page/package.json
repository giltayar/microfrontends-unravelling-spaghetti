    "chai-subset": "^1.6.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jsdom": "19.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^9.2.2",
