{
  "name": "microfrontends-unravelling-spaghetti-todo-list-page-server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "exports": "./src/todo-list-page-server.js",
  "main": "./src/todo-list-page-server.js",
  "bin": {
    "todo-list-page-server": "src/run-todo-list-page-server.js"
  },
  "types": "./types/src/todo-list-page-server.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src",
    "types",
    "dist"
  ],
  "config": {
    "docker_node_version": "16.3.0"
  },
  "scripts": {
    "start": "node src/run-todo-list-page-server.js",
    "build": "concurrently -r 'npm:build:*'",
    "build:typescript": "rm -rf types && tsc && cp src/*.d.ts types/src",
    "build:public": "node ./dev/generate-html.js ./public todo-list-page-server-client.js index.html",
    "build:docker": "DOCKER_BUILDKIT=1 docker build -t roundforestltd/todo-list-page-server:${npm_package_version} --secret id=npmrc,src=$(npm get userconfig) --build-arg NODE_VERSION=${npm_package_config_docker_node_version} .",
    "test": "FULL_TEST=1 concurrently -r 'npm:test:*'",
    "test:mocha-parallel": "npm run mocha -- --parallel",
    "test:eslint": "eslint --max-warnings=0 --color '**/*.js'",
    "test:typescript": "tsc --noEmit --emitDeclarationOnly false --pretty",
    "postpublish": "concurrently -r 'npm:publish:*'",
    "publish:docker": "docker push roundforestltd/todo-list-page-server:${npm_package_version}",
    "mocha": "mocha --no-timeouts --exit --color 'test/unit/*.test.js' 'test/integ/*.test.js' 'test/e2e/*.test.js'"
  },
  "keywords": [
    "javascript",
    "nodejs",
    "microfrontends"
  ],
  "author": "Gil Tayar <gil@tayar.org>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/giltayar/microfrontends-unravelling-spaghetti",
    "directory": "todo-list-page-server",
    "type": "git"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/plugin-syntax-top-level-await": "^7.12.13",
    "@jspm/generator": "^1.0.0-beta.19",
    "@roundforest/docker-compose-testkit": "^1.5.23",
    "@roundforest/http-commons": "^3.0.7",
    "@roundforest/mocha-commons": "^1.0.11",
    "@roundforest/pino-testkit": "^2.0.6",
    "@roundforest/promise-commons": "^1.1.7",
    "@roundforest/scripting-commons": "^1.8.4",
    "@roundforest/webdriverio-testkit": "^1.1.33",
    "@types/chai": "^4.2.15",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.9",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^9.1.3",
    "p-retry": "^4.4.0",
    "prettier": "^2.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@roundforest/frontend-commons": "^1.0.1",
    "@roundforest/functional-commons": "^1.4.2",
    "@roundforest/log-request-fastify-plugin": "^1.1.28",
    "@roundforest/pino-global": "^2.2.31",
    "close-with-grace": "^1.1.0",
    "fastify": "^3.14.0",
    "fastify-helmet": "^5.3.1",
    "fastify-static": "^4.0.1",
    "htm": "^3.0.4",
    "microfrontends-unravelling-spaghetti-todo-list-page": "^1.0.4",
    "pino": "^6.11.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
